<androidx.cardview.widget.CardView
    android:background="#EEEEEE"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="4dp"
    android:orientation="vertical"
    android:padding="4dp"
    app:cardCornerRadius="7dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/order_date"
                android:textAlignment="textEnd"
                android:layout_weight="0.4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Thursday, 27 May 2021"
                android:textColor="@android:color/black"
                android:textSize="12sp" />




        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView

        android:padding="6dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="OrderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/order_id"
        android:padding="6dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="OrderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</LinearLayout>


            <TextView
                android:id="@+id/prod_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="Nepal Gas"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_type"
                android:padding="6dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="Replacement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:padding="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="Quantity:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/order_qty"
                    android:padding="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:padding="6dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="Total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/total"
                    android:padding="6dp"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:text="Rs.5000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <TextView
                android:id="@+id/notes"
                android:padding="6dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="Notes:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/c_name"
                android:padding="6dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="Ashish Shakya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/c_address"
                android:padding="6dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="New baneshower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/c_phone"
                android:padding="6dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:text="9841489555"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>


                <Button
                    android:layout_weight="0.4"
                    android:text="Approve Order"
                    android:id="@+id/approve_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>